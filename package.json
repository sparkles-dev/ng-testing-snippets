  "scripts": {
    "ng": "ng",
    "jsonserver:start": "forever start e2e/mocks/json-server.js",
    "jsonserver:stop": "forever stop e2e/mocks/json-server.js",
    "start": "ng serve --proxy-conf proxy.conf.json",
    "build": "ng build",
    "test": "ng test",
